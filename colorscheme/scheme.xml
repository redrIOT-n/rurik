<scheme>
  <theme>
    <background>black</background>
    <text_editor>blue</text_editor>
    <terminal>blue</terminal>
    <debugger>blue</debugger>
    <file_browser>blue</file_browser>
    <menubar>green</menubar>
    <statusbar>green</statusbar>
  </theme>
  <colorscheme>
    <c>
      <comments>
        <color>white</color>
        <font_type></font_type>
