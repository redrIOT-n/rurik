      <conditional_statements>
        <color>green</color>
        <font_type>bold</font_type>
      </conditional_statements>
      <loops>
        <color>yellow</color>
        <font_type>bold</font_type>
      </loops>
      <structures>
        <color>pink<color>            
        <font_type>normal</font_type>
      </structures>          
